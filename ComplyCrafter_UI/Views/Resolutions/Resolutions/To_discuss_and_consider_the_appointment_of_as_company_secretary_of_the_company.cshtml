@if (ViewBag.UseLayout == true)
{
    <!-- Bootstrap Tabs -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="details-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab">
                Details of Director
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="documents-tab" data-bs-toggle="tab" data-bs-target="#documents" type="button" role="tab">
                Documents
            </button>
        </li>
    </ul>
}
<!-- Tab Content -->
<div class="@(ViewBag.UseLayout == true ? "tab-content mt-3" : "")" id="myTabContent">

    <!-- TAB 1: Details of Director -->
    <div class="@(ViewBag.UseLayout == true ? "tab-pane fade show active" : "")" id="details" role="tabpanel" aria-labelledby="details-tab">

        <div class="@(ViewBag.UseLayout == true ? "card p-4 shadow-sm mt-3" : "")">
            @if (ViewBag.UseLayout == true)
            {
                <table class="custom-table">
                    <tbody>
                        <!-- Appointment / Consent Section -->
                        <tr>
                            <td><strong>Designation</strong></td>
                            <td>
                                <select class="form-control" name="designation">
                                    <option value="">Select Designation</option>
                                    <option>Director</option>
                                    <option>Managing Director</option>
                                    <option>Whole Time Director</option>
                                </select>
                            </td>
                            <td><strong>Date of Appointment</strong></td>
                            <td><input type="date" name="appointmentDate" class="form-control"></td>
                        </tr>

                        <tr>
                            <td><strong>Date of Consent</strong></td>
                            <td><input type="date" name="dateOfConsent" class="form-control"></td>
                            <td><strong>Place of Consent</strong></td>
                            <td><input type="text" name="placeOfConsent" class="form-control" placeholder="Enter place"></td>
                        </tr>

                        <tr>
                            <td colspan="4">
                                <label><strong>Do you want to incorporate this agenda in existing Board Meeting ?</strong></label>
                                &nbsp;
                                <label><input type="radio" name="incorporateAgendaInExistingMeeting" value="Yes"> Yes</label>
                                &nbsp;
                                <label><input type="radio" name="incorporateAgendaInExistingMeeting" value="No"> No</label>
                            </td>
                        </tr>

                        <tr>
                            <td><strong>Select Existing Meeting</strong></td>
                            <td>
                                <select class="form-control" name="existingMeeting">
                                    <option value="">Select Meeting</option>
                                    <option>15/04/2025</option>
                                    <option>20/06/2025</option>
                                </select>
                            </td>
                            <td><strong>Authorized Signatory</strong></td>
                            <td>
                                <select class="form-control director" name="authorizedSignatory">
                                    <option value="">Select Director</option>
                                </select>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <table class="custom-table-kmp">
                    <tbody>
                        <!-- KMP Details Section -->
                        <tr>
                            <td colspan="4" class="table-title">DETAILS OF KMP</td>
                        </tr>

                        <tr>
                            <td><strong>Name</strong></td>
                            <td><input type="text" class="form-control" name="name"></td>
                            <td><strong>Father's Name</strong></td>
                            <td><input type="text" class="form-control" name="fatherName"></td>
                        </tr>

                        <tr>
                            <td><strong>PAN</strong></td>
                            <td><input type="text" class="form-control" name="pan"></td>
                            <td><strong>Date of Birth</strong></td>
                            <td><input type="date" class="form-control" name="dateOfBirth"></td>
                        </tr>

                        <tr>
                            <td><strong>Contact No.</strong></td>
                            <td><input type="text" class="form-control" name="mobile"></td>
                            <td><strong>Email ID</strong></td>
                            <td><input type="email" class="form-control" name="email"></td>
                        </tr>

                        <tr>
                            <td><strong>Gender</strong></td>
                            <td>
                                <select class="form-control" name="gender">
                                    <option value="">Select Gender</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Other</option>
                                </select>
                            </td>
                            <td colspan="2"></td>
                        </tr>

                        <tr>
                            <td><strong>Address Line 1</strong></td>
                            <td><input type="text" class="form-control" name="addressLine1"></td>
                            <td><strong>Address Line 2</strong></td>
                            <td><input type="text" class="form-control" name="addressLine2"></td>
                        </tr>

                        <tr>
                            <td><strong>State</strong></td>
                            <td>
                                <select class="form-control" name="state">
                                    <option value="">Select State</option>
                                    <option>Maharashtra</option>
                                    <option>Gujarat</option>
                                </select>
                            </td>
                            <td><strong>City</strong></td>
                            <td>
                                <select class="form-control" name="city">
                                    <option value="">Select City</option>
                                    <option>Mumbai</option>
                                    <option>Pune</option>
                                </select>
                            </td>
                        </tr>

                        <tr>
                            <td><strong>Pincode</strong></td>
                            <td><input type="text" class="form-control num" name="pincode"></td>
                            <td><strong>Country</strong></td>
                            <td>
                                <select class="form-control" name="country">
                                    <option value="">Select Country</option>
                                    <option>India</option>
                                    <option>USA</option>
                                </select>
                            </td>
                        </tr>
                    </tbody>
                </table>
