                            <div class="col-xs-12 col-sm-12 col-md-12 mt-3 " style="margin-left: 0px;margin-top:-12px;">

                                <input type="text" name="applicationComments" class="form-control" id="ApplicationComments" style="width: 100%;height: 40px;margin-left: -11px;margin-top: -4px;" value="" required="">
