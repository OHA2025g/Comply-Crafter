<script>
    const orderDropdown = document.getElementById("orderPassedBy");
    const locationInput = document.getElementById("locationInput");
    const ncltDropdown = document.getElementById("LocationDropdown_NCLT");
    const nclatDropdown = document.getElementById("LocationDropdown_NCLAT");
    const otherBench = document.getElementById("otherBenchContainer");

    orderDropdown.addEventListener("change", function () {
      const value = this.value;

     
      locationInput.style.display = "block";
      ncltDropdown.style.display = "none";
      nclatDropdown.style.display = "none";
      otherBench.style.display = "none";

      if (value === "NCLT") {
        locationInput.style.display = "none";
        ncltDropdown.style.display = "block";
      } else if (value === "NCLAT") {
        locationInput.style.display = "none";
        nclatDropdown.style.display = "block";
      } else if (value === "Any other competent authority") {
        otherBench.style.display = "block";
      }
    });

    ncltDropdown.addEventListener("change", function () {
      otherBench.style.display = this.value === "Others" ? "block" : "none";
    });

    nclatDropdown.addEventListener("change", function () {
      otherBench.style.display = this.value === "Other" ? "block" : "none";
    });
</script>

