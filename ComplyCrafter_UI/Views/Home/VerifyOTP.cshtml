@{
    ViewData["Title"] = @ViewBag.ctrl;
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="@R.AppName Admin">
    <meta name="keywords" content="admin,dashboard">
    <meta name="author" content="stacks">
    <title>@R.AppName - Login</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp" rel="stylesheet">
    <link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/plugins/perfectscroll/perfect-scrollbar.css" rel="stylesheet">
    <link href="~/assets/plugins/pace/pace.css" rel="stylesheet">
    <link href="~/assets/css/main.min.css" rel="stylesheet">
    <link href="~/assets/css/custom.css" rel="stylesheet">
    <link rel="icon" type="image/png" sizes="32x32" href="~/img/logos/logo_sq_2.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/img/logos/logo_sq_2.png" />
    <link rel="icon" href="~/img/favicon.png" />
    <link rel="shortcut icon" href="~/img/favicon.png" />
    <link rel="apple-touch-icon" href="~/img/favicon.png" />
    <link rel="stylesheet" href="~/assets/plugins/toastr/toastr.min.css" />
    <script>
        localStorage.setItem('authToken', '');
    </script>
    <style>
        body {
            background: linear-gradient(135deg, #e5ebfa, white) !important;
        }
    </style>
</head>
<body>
    <div class="app app-auth-sign-in align-content-stretch d-flex flex-wrap justify-content-end">
        <div class="app-auth-background">
        </div>
        <div class="app-auth-container">
            <div class="logo">
                <a>@R.AppName</a>
            </div>
            <p class="auth-description">
                Please enter mobile number to verify account and continue to the dashboard.
            </p>

            <div class="auth-credentials m-b-xxl">
                <div class="m-b-md">
                    <label class="form-label">Mobile Number</label>
                    <input type="tel" class="form-control" name="mobile" aria-describedby="Company Mobile" placeholder="Enter Mobile Number">
                    <div class="invalid-feedback"></div>
                </div>

                <div id="otp-div" class="m-b-md" style="display: none">
                    <label for="signInPassword" class="form-label">OTP</label>
                    <input type="password" class="form-control" name="otp" aria-describedby="signInPassword" placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;">
                    <div class="invalid-feedback"></div>
                </div>
            </div>

            <div class="auth-submit">
                <button class="btn btn-primary btn-1" id="btnSendOTP">Send OTP</button>
                <button class="btn btn-primary btn-2" style="display: none" id="btnValidateOTP">Validate OTP</button>
            </div>

            <div id="divOTP" style="font-weight:bold; color: red;"></div>
        </div>
    </div>

    <!-- Javascripts -->
    <script src="~/assets/plugins/jquery/jquery-3.5.1.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/plugins/perfectscroll/perfect-scrollbar.min.js"></script>
    <script src="~/assets/plugins/pace/pace.min.js"></script>
    <script src="~/assets/js/main.min.js"></script>
    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/plugins/toastr/toastr.min.js"></script>
    <script>

        if('@ViewBag.Message')
        {
            toastr.error('@ViewBag.Message');
        }
        if('@ViewBag.MobileNumber')
        {
            $('[name="mobile"]').val('@ViewBag.MobileNumber');
            $('[name="mobile"]').prop("readonly", true);
        }

        $.fn.validate = function (valid, errorMsg) {
            $(this).removeClass('is-valid').removeClass('is-invalid').addClass('is-' + (valid ? 'valid' : 'invalid'));
            if (!valid && errorMsg)
                $(this).parent().find('.invalid-feedback').text(errorMsg);
        }

        $('#btnLogin').click(function () {
            let auth = {
                email: $('[name="email"]').val(),
                password: $('[name="password"]').val(),
            };
            var valid = true;
            if (!auth.email) { $('[name="email"]').validate(false, 'Email is required'); valid = false; }
            else $('[name="email"]').validate(true);
            if (!auth.password) { $('[name="password"]').validate(false, 'Password is required'); valid = false; }
            else $('[name="password"]').validate(true);

            if (!valid) return;

            $.ajax({
                url: '@R.ApiUrl/Auth/Authenticate',
                data: JSON.stringify(auth),
                contentType: 'application/json',
                type: 'POST',
                success: data => {
                    if (data.status) {
                        toastr.success(data.message);
                        localStorage.setItem('authToken', data.responseObject);
                        window.location = '@Url.Action("Index")'
                    }
                    else toastr.error(data.message);
                }
            });
        });

        $('[name="email"],[name="password"]').on('keypress', function () { if (event.keyCode == 13) $('#btnLogin').trigger('click') });

        $('.showPassword').click(function () {
            if ($(this).hasClass('fa-lock')) {
                $('[name="password"]').attr('type', 'text');
                $(this).removeClass('fa-lock').addClass('fa-lock-open');
            } else {
                $('[name="password"]').attr('type', 'password');
                $(this).removeClass('fa-lock-open').addClass('fa-lock');
            }
        })

        $('#btnSendOTP').click(function () {
            //debugger
            if (!$('[name="mobile"]').val()) { $('[name="mobile"]').validate(false, 'Mobile Number is required'); valid = false; }
            else if (!$('[name="mobile"]').val().match(/^\d{10}$/)) { $('[name="mobile"]').validate(false, 'Please enter a valid Mobile Number'); valid = false; }
            else $('[name="mobile"]').validate(true);

            var vCount=GetOTPCount($('[name="mobile"]').val());

            if(vCount<10)
            {
                $.get(`@R.ApiUrl/User/OTP/` + $('[name="mobile"]').val() + '/' + '@ViewBag.EmailAddress').then(r => {
                    if (r.status) {
                        $('[name="mobile"]').prop('readonly', 'readonly');
                        $('#otp-div').show();
                        $('.btn-1').hide();
                        $('.btn-2').show();
                        OTPTimer();
                    }
                    else {
                        toastr.error(r.message);
                    }
                })
            }
            else
            {
                setTimeout(function(){
                    window.location = '@Url.Action("Login", "Home")';
                },2000);
                toastr.error('You have reached the maximum number of OTP requests for today.');
            }
        });

        $('#btnValidateOTP').click(function () {
            if (!$('[name="mobile"]').val()) { $('[name="mobile"]').validate(false, 'Mobile Number is required'); valid = false; }
            else if (!$('[name="mobile"]').val().match(/^\d{10}$/)) { $('[name="mobile"]').validate(false, 'Please enter a valid Mobile Number'); valid = false; }
            else $('[name="mobile"]').validate(true);
            if (!$('[name="otp"]').val()) { $('[name="otp"]').validate(false, 'OTP is required'); valid = false; }
            else if (!$('[name="otp"]').val().match(/^\d{6}$/)) { $('[name="otp"]').validate(false, 'Please enter a valid OTP'); valid = false; }
            else $('[name="otp"]').validate(true);
            $.get(`@R.ApiUrl/User/ValidateOTP/` + $('[name="mobile"]').val() + '/' + $('[name="otp"]').val()).then(r => {
                if (r.status) {
                    toastr.success(r.message);
                    $('#divOTP').hide();
                    setTimeout(function(){

                        // if('@ViewBag.MobileVerify')
                        //     window.location = '@Url.Action("Login", "Home")';
                        // else
                            window.location = '@Url.Action("SetCCPIN", "Home")' + '?emailId=' + '@ViewBag.EmailAddress';
                        
                    },1000);

                    $('#otp-div').hide();
                    $('.btn-1').hide();
                    $('.btn-2').hide();
                }
                else toastr.error(r.message);
            })
        });

        function OTPTimer()
        {
            let seconds = '@ViewBag.OTPValidity'; // 5 minutes = 300

            const timer = setInterval(function () {
            const minutes = Math.floor(seconds / 60);
            const secs = seconds % 60;
            document.getElementById("divOTP").innerText =
                `This OTP expires in ${minutes}:${secs < 10 ? '0' + secs : secs}`;

                if (seconds <= 0) {
                    clearInterval(timer);
                    SetOTPExpired($('[name="mobile"]').val());
                    document.getElementById("divOTP").innerText = "OTP has expired.";
                    $('#btnSendOTP').hide();
                    $('#otp-div').hide();
                    $('.btn-1').show();
                    $('.btn-1').text('Resend OTP');
                    $('.btn-2').hide();

                }

                seconds--;
            }, 1000);
        }

        function SetOTPExpired(mobile)
        {
            toastr.error('Oops..! OTP expired. Please click on resend button.');
            $.get(`@R.ApiUrl/User/OTPExpired/` + $('[name="mobile"]').val()).then(r => {
            })
        }

        function GetOTPCount(mobile)
        {
            var iCount=0;
            $.ajax({
                url: '@R.ApiUrl/User/OTPCount/'+$('[name="mobile"]').val(),
                contentType: 'application/json',
                type: 'GET',
                async: false, // <-- synchronous
                success: data => {
                    if (data.status) {
                        iCount = data.message;
                    }
                }
            });
            return iCount;
        }
    </script>
</body>
</html>