@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@R.AppName - Reset CC PIN</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Fonts & CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/css/main.min.css" rel="stylesheet">
    <link href="~/assets/css/custom.css" rel="stylesheet">
    <link href="~/assets/plugins/toastr/toastr.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #e5ebfa, white) !important;
            font-family: 'Poppins', sans-serif;
        }

        .pin-wrapper {
            gap: 10px;
            margin-bottom: 10px;
        }

        .pin-input {
            width: 50px;
            height: 50px;
            text-align: center;
            font-size: 22px;
            border-radius: 8px;
            border: 1px solid #ccc;
        }

            .pin-input:focus {
                border-color: #3f51b5;
                box-shadow: 0 0 0 2px rgba(63, 81, 181, 0.2);
                outline: none;
            }

        .invalid-feedback {
            display: none;
            color: red;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="app app-auth-sign-in align-content-stretch d-flex flex-wrap justify-content-end">
        <div class="app-auth-background"></div>
        <div class="app-auth-container">
            <div class="logo">
                <a>@R.AppName</a>
            </div>
            <p class="auth-description">
                Set your new 4-digit CC Pin to regain access to your account.
            </p>

            <div class="auth-credentials m-b-xxl">
                <input type="hidden" id="resetToken" value="" />

                <label class="form-label d-flex justify-content-center">New CC Pin</label>
                <div class="d-flex justify-content-center pin-wrapper">
                    <input type="text" maxlength="1" class="form-control pin-input" inputmode="numeric">
                    <input type="text" maxlength="1" class="form-control pin-input" inputmode="numeric">
                    <input type="text" maxlength="1" class="form-control pin-input" inputmode="numeric">
                    <input type="text" maxlength="1" class="form-control pin-input" inputmode="numeric">
                </div>

                <label class="form-label d-flex justify-content-center">Confirm CC Pin</label>
                <div class="d-flex justify-content-center pin-wrapper">
                    <input type="text" maxlength="1" class="form-control pin-input confirm" inputmode="numeric">
                    <input type="text" maxlength="1" class="form-control pin-input confirm" inputmode="numeric">
                    <input type="text" maxlength="1" class="form-control pin-input confirm" inputmode="numeric">
                    <input type="text" maxlength="1" class="form-control pin-input confirm" inputmode="numeric">
                </div>

                <div class="invalid-feedback text-center" id="ccpinMismatch">CC Pins do not match or are incomplete.</div>
            </div>

            <div class="auth-submit">
                <button class="btn btn-primary w-100" id="btnSaveCCPIN">Save CC Pin</button>
            </div>

            @* <div class="text-center mt-3">
                <a href="@Url.Action("Login", "Home")">Back to Login</a>
            </div> *@
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/assets/plugins/jquery/jquery-3.5.1.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/plugins/toastr/toastr.min.js"></script>
    <script src="~/assets/plugins/toastr/toastr.min.js"></script>
    <script>

        $(document).ready(function(){
            $('.pin-input').on('input', function () {
                if (this.value.length === 1) {
                    $(this).next('.pin-input').focus();
                }
            });

            var isResetPin=false;
            var cKey='@ViewBag.Key';
            if('@ViewBag.IsReset'=='True')
            {
                isResetPin=true;

                $.ajax({
                url: '@R.ApiUrl/Email/ValidateEmail',
                data: { 'key':'@ViewBag.Key'},
                contentType: 'application/json',
                type: 'GET',
                success: data =>
                {
                    //debugger
                    if (data.status) {
                        toastr.success(data.message);
                        $('#btnSaveCCPIN').show();
                    }else
                    {
                    $('#btnSaveCCPIN').hide();
                        toastr.error(data.message);
                        setTimeout(function(){
                            window.location = '@Url.Action("RedirectToActionName", "Home", new { sActionName = "Index" })';
                        },3000);
                    }
                }});
            }


            $.fn.validate = function (valid, errorMsg) {
                $(this).removeClass('is-valid').removeClass('is-invalid').addClass('is-' + (valid ? 'valid' : 'invalid'));
                if (!valid && errorMsg)
                    $(this).parent().find('.invalid-feedback').text(errorMsg);
            };

            function validatePIN()
            {
                var valid = true;
                let newPin = '';
                $('.pin-input:not(.confirm)').each(function () {
                    newPin += $(this).val();
                });


                let confirmPin = '';
                $('.pin-input.confirm').each(function () {
                    confirmPin += $(this).val();
                });

                $('#ccpinMismatch').hide();

                if (newPin.length !== 4 || confirmPin.length !== 4) {
                    $('#ccpinMismatch').show().text("Both fields must be 4 digits.");
                    valid = false;
                }

                if (newPin !== confirmPin) {
                    $('#ccpinMismatch').show().text("CC PINs do not match.");
                    valid = false;
                }
                return valid;
            }

            $('#btnSaveCCPIN').click(function () {
                //debugger

                if(validatePIN()){
                    var vCCPIN = '';
                    $('.pin-input.confirm').each(function () {
                        vCCPIN += $(this).val();
                    });
                    let appUser = {
                        Email: '@ViewBag.EmailAddress',
                        CCPIN: vCCPIN,
                    };

                    let lURL='@R.ApiUrl/User/SetCCPIN';

                    $.ajax({
                        url: lURL,
                        data: JSON.stringify(appUser),
                        contentType: 'application/json',
                        type: 'POST',
                        success: data => {
                            if (data.status) {
                                toastr.success(data.message);
                                $('.pin-input.confirm').each(function () {
                                    $(this).val('');
                                });
                                $('.pin-input:not(.confirm)').each(function () {
                                    $(this).val('');
                                });
                                $('#btnSaveCCPIN').hide();
                                setTimeout(function(){
                                    window.location = '@Url.Action("RedirectToActionName", "Home", new { sActionName = "Index" })';
                                },1500);
                            }
                            else toastr.error(data.message);
                        }
                    });
                }
            });

            $('.pin-input').on('input', function () {
                $('#ccpinMismatch').hide();
            });
        });
    </script>

