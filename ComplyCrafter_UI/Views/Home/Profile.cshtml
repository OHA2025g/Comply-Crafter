    // 🔹 SubUser List
    function fnSubUserDetails() {
        $.ajax({
            url: '@R.ApiUrl/User/GetSubUser',
            type: 'GET',
            headers: { 'Authorization': 'Bearer ' + $.cookie("ComplyCrafterSessionId") },
            success: data => {
                if (data) {
                    $('#tblSubUsers tbody').empty();
                    const tbody = document.querySelector('#tblSubUsers tbody');
                    data.forEach(item => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${item.name}</td>
                            <td>${item.email}</td>
                            <td>${item.mobile}</td>
                            <td>${new Intl.DateTimeFormat('en-GB',{day:'2-digit',month:'short',year:'numeric'}).format(new Date(item.createdOn))}</td>
                            <td>
                                <span class="badge ${item.isActive ? 'bg-success' : 'bg-danger'}">
                                    ${item.isActive ? 'Active' : 'Inactive'}
                                </span>
                            </td>
                            <td>
                                <div class="dropdown d-inline ms-2">
                                    <button class="btn btn-sm btn-light border-0" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item switch-admin cursorpointer" onclick="fnMakeAdmin(${item.id})"><i class="bi bi-arrow-left-right me-2"></i>Make Admin</a></li>
                                        <li><a class="dropdown-item text-danger delete-user cursorpointer" onclick="fnDelete(${item.id})"><i class="bi bi-trash me-2"></i>Delete</a></li>
                                    </ul>
                                </div>
                            </td>
                        `;
                        tbody.appendChild(row);
                    });
                }
            }
        });
    }

    // 🔹 Switch Admin
    function fnMakeAdmin(id) {
        Swal.fire({
            icon: 'info',
            title: 'Attention!',
            text: 'Are you sure you want to transfer your admin rights?',
            showCancelButton: true,
            confirmButtonText: 'Yes, Make an Admin',
            cancelButtonText: 'No, Cancel',
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@R.ApiUrl/User/MakeSubUserAdmin',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ id }),
                    headers: { 'Authorization': 'Bearer ' + $.cookie("ComplyCrafterSessionId") },
                    success: data => {
                        if (data.status) {
                            Swal.fire({ icon: 'success', title: 'Success!', text: data.message })
                                .then(() => window.location = '@Url.Action("Login", "Home")');
                        } else {
                            Swal.fire({ icon: 'error', title: 'Oops...!', text: data.message });
                        }
                    }
                });
            }
        });
    }

    // 🔹 Delete SubUser
    function fnDelete(id) {
        Swal.fire({
            icon: 'info',
            title: 'Attention!',
            text: 'Are you sure you want to delete sub user details?',
            showCancelButton: true,
            confirmButtonText: 'Yes, Delete',
            cancelButtonText: 'No, Cancel',
        }).then((result) => {
            if (result.isConfirmed) {
                window.location = '@Url.Action("Profile", "Home")';
            }
        });
    }
