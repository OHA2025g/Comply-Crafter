<script>
    $(document).ready(function () {
        fnUserInfo();
        fnSD();
        fnSubUserDetails();

        // 🔹 Register SubUser
        $('#btnRegSubUser').click(function () {
            swal.fire({ title: 'Processing...' });
            swal.showLoading();

            let appUser = {
                FirstName: $('#txtFirstName').val(),
                LastName: $('#txtLastName').val(),
                Name: $('#txtFirstName').val() + ' ' + $('#txtLastName').val(),
                Email: $('#txtEmailId').val(),
                Mobile: $('#txtMobile').val(),
            };

            $.ajax({
                url: '@R.ApiUrl/User/RegisterSubUser',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(appUser),
                headers: { 'Authorization': 'Bearer ' + $.cookie("ComplyCrafterSessionId") },
                success: data => {
                    swal.close();
                    if (data.status) {
                        fnSubUserDetails();
                        fnSendEmailtoSubuser();
                        Swal.fire({ icon: 'success', title: 'Success!', text: data.message });
                        $('#divSubUser').modal('hide');
                    } else {
                        Swal.fire({ icon: 'error', title: 'Oops...!', text: data.message });
                    }
                }
            });
        });

        // 🔹 Save Account Settings
        $('#btnSaveAccount').click(function () {
            fnSaveAccount();
        });
    });

    // 🔹 User Info
    function fnUserInfo() {
        $.ajax({
            url: `@R.ApiUrl/Auth/UserInfo`,
            type: 'GET',
            headers: { 'Authorization': 'Bearer ' + $.cookie("ComplyCrafterSessionId") },
            success: data => {
                if (data.status) {
                    const user = data.responseObject;

                    // Top Profile Section
                    $('#adminName').text(user.name);
                    $('#adminEmail').text(user.email);

                    // General Info Tab
                    $('#spnDisplayName').text(user.name);
                    $('#spnEmailId').text(user.email);
                    $('#spnMobile').text(user.mobile);

                    $('#spnFirstName').text(user.firstName || "");
                    $('#spnLastName').text(user.lastName || "");
                    $('#spnMailingAddress').text(user.email || "");
                    $('#spnPhone').text(user.mobile || "");
                    $('#spnAltPhone').text(user.alternateNumber || "");
                    $('#spnDob').text(user.dob || "");
                    $('#spnGst').text(user.gstNumber || "");

                    if (user.gender === "Male") {
                        $("#male").prop("checked", true);
                    } else if (user.gender === "Female") {
                        $("#female").prop("checked", true);
                    }

                    // 🔹 Account Settings Tab
                    $('#spnAccountEmail').text(user.email || "");
                    $('#spnRole').text(user.roleName || "");

                    if (user.roleName === 'SubUser') {
                        $('#subscription').hide();
                        $('#liSubscriptionLink').hide();
                    }
                }
            }
        });
    }

    // 🔹 Save Account Settings
    function fnSaveAccount() {
        var password = $("#txtPassword").val();
        var confirmPassword = $("#txtRetypePassword").val();

        if (password !== confirmPassword) {
            Swal.fire("Error", "Passwords do not match!", "error");
            return;
        }

        var payload = {
            email: $("#spnAccountEmail").text(), // keeping readonly
            password: password
        };

        $.ajax({
            url: '@R.ApiUrl/User/UpdateAccount',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(payload),
            headers: { "Authorization": "Bearer " + $.cookie("ComplyCrafterSessionId") },
            success: function (res) {
                if (res.status) {
                    Swal.fire("Success", res.message || "Account updated successfully!", "success");
                    $("#txtPassword").val('');
                    $("#txtRetypePassword").val('');
                } else {
                    Swal.fire("Error", res.message || "Something went wrong.", "error");
                }
            }
        });
    }

    // 🔹 Subscription History
    function fnSD() {
        $.ajax({
            url: '@R.ApiUrl/Subscription/List',
            type: 'GET',
            headers: { 'Authorization': 'Bearer ' + $.cookie("ComplyCrafterSessionId") },
            success: data => {
                if (data) {
                    const tbody = document.querySelector('#tblsubscriptionhistory tbody');
                    tbody.innerHTML = "";
                    data.forEach(item => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td class="text-center">${item.subscriptionPlan.planName}</td>
                            <td class="text-center">${fnExpiryDays(item.userSubscription.endDate)}</td>
                            <td class="text-center">${item.subscriptionPlan.noOfCompany}</td>
                            <td>${new Intl.DateTimeFormat('en-GB',{day:'2-digit',month:'short',year:'numeric'}).format(new Date(item.userSubscription.startDate))}</td>
                            <td>${new Intl.DateTimeFormat('en-GB',{day:'2-digit',month:'short',year:'numeric'}).format(new Date(item.userSubscription.endDate))}</td>
                            <td>
                                <span class="badge ${item.userSubscription.isActive ? 'bg-success' : 'bg-danger'}">
                                    ${item.userSubscription.isActive ? 'Active' : item.userSubscription.isCancelled ? 'Expired' : 'Inactive'}
                                </span>
                            </td>
                            <td class="text-center">₹${item.paymentDetails.transactionAmount}</td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary" href="/Subscription/Invoice?InvoiceId=${item.userSubscription.id}" target="_blank">
                                    <i class="bi bi-eye"></i> View Invoice
                                </a>
                            </td>
                        `;
                        tbody.appendChild(row);
                    });
                }
            }
        });
    }

    function fnExpiryDays(date) {
        var startDate = new Date(date);
        var today = new Date();
        startDate.setHours(0,0,0,0);
        today.setHours(0,0,0,0);
        return Math.round((startDate - today) / (1000 * 60 * 60 * 24));
    }

