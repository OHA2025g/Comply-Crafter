@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@R.AppName - Reset Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Fonts & CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/css/main.min.css" rel="stylesheet">
    <link href="~/assets/css/custom.css" rel="stylesheet">
    <link href="~/assets/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        body {
            background: linear-gradient(135deg, #e5ebfa, white) !important;
            font-family: 'Poppins', sans-serif;
        }

        .auth-alts {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .invalid-feedback {
            display: none;
            color: red;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="app app-auth-sign-in align-content-stretch d-flex flex-wrap justify-content-end">
        <div class="app-auth-background"></div>
        <div class="app-auth-container">
            <div class="logo">
                <a>@R.AppName</a>
            </div>
            <p class="auth-description">
                Set your new password below to regain access to your account.
            </p>

            <div class="auth-credentials m-b-xxl">
                <input type="hidden" id="resetToken" value="" />

                <label class="form-label">New Password</label>
                <input type="password" class="form-control m-b-md" id="newPassword" placeholder="Enter new password">

                <label class="form-label">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm new password">
                <div class="invalid-feedback" id="passwordMismatch">Passwords do not match.</div>
            </div>

            <div class="auth-submit">
                <button class="btn btn-primary w-100" id="btnResetPassword">Reset Password</button>
            </div>

            <div class="text-center mt-3">
                <a href="@Url.Action("Login", "Home")">Back to Login</a>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/assets/plugins/jquery/jquery-3.5.1.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/plugins/perfectscroll/perfect-scrollbar.min.js"></script>
    <script src="~/assets/plugins/pace/pace.min.js"></script>
    <script src="~/assets/js/main.min.js"></script>
    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/plugins/toastr/toastr.min.js"></script>

    <script>
        $(document).ready(function () {
            var vHeaderValue ='';
            if('@ViewBag.Key' != '')
            {

                $.ajax({
                    url: '@R.ApiUrl/Email/ValidateEmail',
                    data: { 'key':'@ViewBag.Key'},
                    contentType: 'application/json',
                    type: 'GET',
                    success: data => {
                        if (data.status) {
                            toastr.success(data.message);
                            vHeaderValue = data.responseObject;
                            $('#btnResetPassword').show();
                        }else
                        {
                            toastr.error(data.message);
                            $('#btnResetPassword').hide();
                            $('[type="password"]').prop("readonly", true);
                        }
                    }
                });
            }
            else
                window.location.href = "/Home/Login";

            $('#btnResetPassword').click(function () {
                var token = $('#resetToken').val();
                var vPassword = $('#newPassword').val().trim();
                var confirmPassword = $('#confirmPassword').val().trim();

                $('#passwordMismatch').hide();

                if (!vPassword || !confirmPassword) {
                    toastr.error("Both fields are required.");
                    return;
                }

                if (vPassword.length < 8) {
                    toastr.error("Password must be at least 8 characters long.");
                    return;
                }

                if (vPassword !== confirmPassword) {
                    $('#passwordMismatch').show();
                    return;
                }

                $.ajax({
                    url: '@R.ApiUrl/Auth/ChangePassword',
                    contentType: 'application/json',
                    type: 'GET',
                    data: {'newPassword': ''+vPassword+''},
                    headers: {
                        'Authorization': 'Bearer ' + vHeaderValue
                    },
                    success: function (response) {
                        if (response.status) {
                            toastr.success(response.message);
                            setTimeout(function () {
                                window.location.href = '@Url.Action("Login", "Home")';
                            }, 1500);
                        } else {
                            toastr.error(response.message || "Reset failed.");
                        }
                    },
                    error: function () {
                        toastr.error("Something went wrong.");
                    }
                });
            });

            $('#newPassword, #confirmPassword').on('input', function () {
                $('#passwordMismatch').hide();
            });
        });
    </script>
</body>
</html>
