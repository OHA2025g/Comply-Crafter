@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@R.AppName - Set Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Fonts & CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/css/main.min.css" rel="stylesheet">
    <link href="~/assets/css/custom.css" rel="stylesheet">
    <link href="~/assets/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        body {
            background: linear-gradient(135deg, #e5ebfa, white) !important;
            font-family: 'Poppins', sans-serif;
        }

        .auth-alts {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .pin-wrapper {
            gap: 10px;
            margin-bottom: 10px;
        }

        .pin-input {
            width: 50px;
            height: 50px;
            text-align: center;
            font-size: 22px;
            border-radius: 8px;
            border: 1px solid #ccc;
        }

            .pin-input:focus {
                border-color: #3f51b5;
                box-shadow: 0 0 0 2px rgba(63, 81, 181, 0.2);
                outline: none;
            }
        .invalid-feedback {
            display: none;
            color: red;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>

    <div class="app app-auth-sign-in align-content-stretch d-flex flex-wrap justify-content-end">
        <div class="app-auth-background"></div>
        <div class="app-auth-container" id="divPassword">
            <div class="logo">
                <a>@R.AppName</a>
            </div>
            <p class="auth-description">
                Set your new password below to gain access to your account.
            </p>

            <div class="auth-credentials m-b-xxl">
                <label class="form-label">New Password</label>
                <input type="password" class="form-control m-b-md" id="newPassword" placeholder="Enter new password">

                <label class="form-label">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm new password">
                <div class="invalid-feedback" id="passwordMismatch">Passwords do not match.</div>
            </div>

            <div class="auth-submit">
                <button class="btn btn-primary w-100" id="btnSetPassword">Set Password</button>
            </div>
        </div>

        <div class="app-auth-container" style="display:none" id="divCCPIN">
            <div class="logo">
                <a>@R.AppName</a>
            </div>
            <p class="auth-description">
                Set your new 4-digit CC Pin to regain access to your account.
            </p>

            <div class="auth-credentials m-b-xxl">
                <input type="hidden" id="resetToken" value="" />

                <label class="form-label d-flex justify-content-center">New CC Pin</label>
                <div class="d-flex justify-content-center pin-wrapper">
                    <input type="text" maxlength="1" class="form-control pin-input" inputmode="numeric">
                    <input type="text" maxlength="1" class="form-control pin-input" inputmode="numeric">
                    <input type="text" maxlength="1" class="form-control pin-input" inputmode="numeric">
                    <input type="text" maxlength="1" class="form-control pin-input" inputmode="numeric">
                </div>

                <label class="form-label d-flex justify-content-center">Confirm CC Pin</label>
                <div class="d-flex justify-content-center pin-wrapper">
                    <input type="text" maxlength="1" class="form-control pin-input confirm" inputmode="numeric">
                    <input type="text" maxlength="1" class="form-control pin-input confirm" inputmode="numeric">
                    <input type="text" maxlength="1" class="form-control pin-input confirm" inputmode="numeric">
                    <input type="text" maxlength="1" class="form-control pin-input confirm" inputmode="numeric">
                </div>

                <div class="invalid-feedback text-center" id="ccpinMismatch">CC Pins do not match or are incomplete.</div>
            </div>

            <div class="auth-submit">
                <button class="btn btn-primary w-100" id="btnSetCCPIN">Set CC Pin</button>
            </div>

            @* <div class="text-center mt-3">
                <a href="@Url.Action("Login", "Home")">Back to Login</a>
            </div> *@
        </div>

    </div>

    <!-- Scripts -->
    <script src="~/assets/plugins/jquery/jquery-3.5.1.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/plugins/perfectscroll/perfect-scrollbar.min.js"></script>
    <script src="~/assets/plugins/pace/pace.min.js"></script>
    <script src="~/assets/js/main.min.js"></script>
    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/plugins/toastr/toastr.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.pin-input').on('input', function () {
                if (this.value.length === 1) {
                    $(this).next('.pin-input').focus();
                }
            });

            if('@ViewBag.Message')
            {
                var vMsg='@ViewBag.Message';
                if (vMsg.indexOf("success") !== -1)
                    toastr.success('@ViewBag.Message');
                else
                {
                    toastr.error('@ViewBag.Message');
                    $('#newPassword').prop('readonly', 'readonly');
                    $('#confirmPassword').prop('readonly', 'readonly');
                    $('#btnSetPassword').hide();
                    setTimeout(function(){
                        window.location.href = '@Url.Action("Login", "Home")';
                    },2000);
                }
            }
            else{
                setTimeout(function(){
                    window.location.href = '@Url.Action("Login", "Home")';
                },2000);
            }

            $('#btnSetPassword').click(function () {

                var vPassword = $('#newPassword').val().trim();
                var confirmPassword = $('#confirmPassword').val().trim();

                $('#passwordMismatch').hide();

                if (!vPassword || !confirmPassword) {
                    toastr.error("Both fields are required.");
                    return;
                }

                if (vPassword.length < 8) {
                    toastr.error("Password must be at least 8 characters long.");
                    return;
                }

                if (vPassword !== confirmPassword) {
                    $('#passwordMismatch').show();
                    return;
                }

                let appUser = {
                    Email: '@ViewBag.EmailAddress',
                    Password: vPassword,
                };

                $.ajax({
                    url: '@R.ApiUrl/User/SetPassword',
                    contentType: 'application/json',
                    type: 'POST',
                    data: JSON.stringify(appUser),
                    success: function (response) {
                        if (response.status) {
                            toastr.success(response.message);
                            
                            $('#divPassword').hide();
                            $('#divCCPIN').show();

                        } else {
                            toastr.error(response.message);
                        }
                    },
                    error: function () {
                        toastr.error("Something went wrong.");
                    }
                });
            });

            $('#newPassword, #confirmPassword').on('input', function () {
                $('#passwordMismatch').hide();
            });


            $('#btnSetCCPIN').click(function () {
                $('#divPassword').hide();
                $('#divCCPIN').show();

                if(validatePIN()){
                    var vCCPIN = '';
                    $('.pin-input.confirm').each(function () {
                        vCCPIN += $(this).val();
                    });
                    let appUser = {
                        Email: '@ViewBag.EmailAddress',
                        CCPIN: vCCPIN,
                    };

                    let lURL='@R.ApiUrl/User/SetCCPIN';
                    $.ajax({
                        url: lURL,
                        data: JSON.stringify(appUser),
                        contentType: 'application/json',
                        type: 'POST',
                        success: data => {
                            if (data.status) {
                                toastr.success(data.message);
                                $('.pin-input.confirm').each(function () {
                                    $(this).val('');
                                });
                                $('.pin-input:not(.confirm)').each(function () {
                                    $(this).val('');
                                });
                            }
                            else toastr.error(data.message);
                        }
                    });
                }                
                setTimeout(function(){
                    window.location.href = '@Url.Action("Login", "Home")';
                },2000);
            });



            function validatePIN()
            {
                var valid = true;
                let newPin = '';
                $('.pin-input:not(.confirm)').each(function () {
                    newPin += $(this).val();
                });


                let confirmPin = '';
                $('.pin-input.confirm').each(function () {
                    confirmPin += $(this).val();
                });

                $('#ccpinMismatch').hide();

                if (newPin.length !== 4 || confirmPin.length !== 4) {
                    $('#ccpinMismatch').show().text("Both fields must be 4 digits.");
                    valid = false;
                }

                if (newPin !== confirmPin) {
                    $('#ccpinMismatch').show().text("CC PINs do not match.");
                    valid = false;
                }
                return valid;
            }

        });
    </script>
</body>
</html>
